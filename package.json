{
  "name": "clean-angular",
  "version": "0.0.0",
  "scripts": {
    "build-themes": "bash scripts/tools/build-themes.sh",
    "ng": "ng",
    "start": "npm run build-themes && ng serve --port 4201",
    "build": "npm run build-themes && ng build",
    "test": "npm run build-themes && ng test",
    "lint": "ng lint",
    "e2e": "npm run build-themes && ng e2e",
    "update:docs": "node scripts/toc.js",
    "release": "standard-version",
    "commit": "git-cz",
    "analyze": "ng build --prod --stats-json && webpack-bundle-analyzer dist/psp-web/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^8.0.3",
    "@angular/cdk": "^8.0.1",
    "@angular/common": "~8.0.3",
    "@angular/compiler": "~8.0.3",
    "@angular/core": "~8.0.3",
    "@angular/forms": "~8.0.3",
    "@angular/material": "^8.0.1",
    "@angular/platform-browser": "~8.0.3",
    "@angular/platform-browser-dynamic": "~8.0.3",
    "@angular/router": "~8.0.3",
    "core-js": "^3.1.4",
    "normalize.css": "^8.0.1",
    "rxjs": "~6.5.2",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.6",
    "@angular/cli": "~8.0.6",
    "@angular/compiler-cli": "~8.0.3",
    "@angular/language-service": "~8.0.3",
    "@types/jasmine": "~3.3.13",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~12.0.10",
    "codelyzer": "~5.1.0",
    "commitizen": "^3.1.1",
    "husky": "^3.0.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.2",
    "lint-staged": "^9.0.0",
    "prettier": "^1.18.2",
    "protractor": "~5.4.0",
    "standard-version": "^6.0.1",
    "stylelint": "^10.1.0",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "typescript": "~3.4.5",
    "webpack-bundle-analyzer": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ng lint",
      "pre-push": "ng test && ng build --prod --aot"
    }
  },
  "lint-staged": {
    "src/app/*.{css,scss}": [
      "stylelint --syntax=scss",
      "prettier --parser --write",
      "git add"
    ],
    "{src,test}/**/*.ts": [
      "prettier --write --single-quote",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./scripts/cz-config.js"
    }
  },
  "standard-version": {
    "message": "chore: Release v%s",
    "release-as": "patch"
  }
}
