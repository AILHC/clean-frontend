{
  "name": "clean-angular",
  "version": "0.0.0",
  "scripts": {
    "build-themes": "bash scripts/tools/build-themes.sh",
    "ng": "ng",
    "start": "npm run build-themes && ng serve --port 4201",
    "build": "npm run build-themes && ng build",
    "test": "npm run build-themes && ng test",
    "lint": "ng lint",
    "e2e": "npm run build-themes && ng e2e",
    "update:docs": "node scripts/toc.js",
    "release": "standard-version",
    "commit": "git-cz",
    "analyze": "ng build --prod --stats-json && webpack-bundle-analyzer dist/psp-web/stats.json"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^7.2.12",
    "@angular/cdk": "^7.3.7",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/material": "^7.3.7",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "core-js": "^2.5.4",
    "normalize.css": "^8.0.1",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.6",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.5.0",
    "commitizen": "^3.1.1",
    "husky": "^1.3.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.0.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~1.1.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "protractor": "~5.4.0",
    "standard-version": "^5.0.2",
    "stylelint": "^9.10.1",
    "ts-node": "~7.0.0",
    "tslint": "~5.11.0",
    "typescript": "~3.2.2",
    "webpack-bundle-analyzer": "^3.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "ng lint",
      "pre-push": "ng test && ng build --prod --aot"
    }
  },
  "lint-staged": {
    "src/app/*.{css,scss}": [
      "stylelint --syntax=scss",
      "prettier --parser --write",
      "git add"
    ],
    "{src,test}/**/*.ts": [
      "prettier --write --single-quote",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./scripts/cz-config.js"
    }
  },
  "standard-version": {
    "message": "chore: Release v%s",
    "release-as": "patch"
  }
}
